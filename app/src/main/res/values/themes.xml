<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UserProfileApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!--         <item name="colorPrimary">@color/black</item>-->
        <item name="checkboxStyle">@style/MyCheckboxesStyle</item>
    </style>

    <style name="Theme.UserProfileApp" parent="Base.Theme.UserProfileApp" />

    <style name="BaseHeader" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ScoreCountIndicator" parent="BaseHeader">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="MyCheckboxesStyle" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/turquoise</item>
    </style>

    <style name="PhoneFieldStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">?colorPrimary</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="cursorColor">@color/white</item>
    </style>
</resources>