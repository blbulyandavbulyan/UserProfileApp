<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UserProfileApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!--         <item name="colorPrimary">@color/black</item>-->
        <item name="checkboxStyle">@style/MyCheckboxesStyle</item>
    </style>

    <style name="Theme.UserProfileApp" parent="Base.Theme.UserProfileApp" />

    <style name="BaseColoredHeader" parent="BaseHeader">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ScoreCountIndicator" parent="BaseColoredHeader">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="PhoneFieldStyle" parent="BasesPhoneFieldStyle">
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="cursorColor">@color/white</item>
        <item name="boxStrokeColor">@color/black</item>
    </style>

    <style name="PhoneFieldTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColorHighlight">@color/green</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>